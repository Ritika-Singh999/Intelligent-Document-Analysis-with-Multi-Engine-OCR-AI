{
  "info": {
    "_postman_id": "b9a6f3f2-4f2d-4a2b-9c1f-8d6d9e4d8f2a",
    "name": "Document Check API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection to test document verification endpoints (health and document check)"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/health",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "health"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Body has status ok', function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.status).to.equal('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Check Documents",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"additionalData\": {\n    \"employmentType\": \"Standard Employment\",\n    \"userName\": \"Ravi Kumar\",\n    \"documentNo\": \"1001\"\n  },\n  \"documents\": [\n    \"E:\\\\n\\\\doc_archive\\\\app\\\\payslips\\\\payslip_01.pdf\",\n    \"E:\\\\n\\\\doc_archive\\\\app\\\\payslips\\\\payslip_02.pdf\",\n    \"E:\\\\n\\\\doc_archive\\\\app\\\\payslips\\\\payslip_03.pdf\"\n  ]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/verify",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "verify"
          ]
        },
        "description": "Analyzes documents for identity verification, classification, and employment type detection."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var json = pm.response.json();",
              "",
              "pm.test('Response includes requestData and profileReports array', function () {",
              "    pm.expect(json).to.have.property('requestData');",
              "    pm.expect(json).to.have.property('profileReports');",
              "    pm.expect(json.profileReports).to.be.an('array');",
              "});",
              "",
              "pm.test('Profile Reports format is correct', function () {",
              "    const report = json.profileReports[0];",
              "    pm.expect(report).to.have.property('owner');",
              "    pm.expect(report).to.have.property('is_uploader');",
              "    pm.expect(report).to.have.property('remarks');",
              "    pm.expect(report).to.have.property('documents');",
              "    pm.expect(report.documents).to.be.an('array');",
              "    pm.expect(report).to.have.property('classified_files');",
              "    pm.expect(report.classified_files).to.be.an('array');",
              "    pm.expect(report).to.have.property('employment_type');",
              "});",
              "",
              "pm.test('Classified files have correct format', function () {",
              "    const files = json.profileReports[0].classified_files;",
              "    files.forEach(file => {",
              "        pm.expect(file).to.have.property('filename');",
              "        pm.expect(file).to.have.property('documents');",
              "        pm.expect(file.documents).to.be.an('array');",
              "        file.documents.forEach(doc => {",
              "            pm.expect(doc).to.have.property('match_name');",
              "            pm.expect(doc).to.have.property('match_name_es');",
              "            pm.expect(doc).to.have.property('uuid');",
              "        });",
              "    });",
              "});",
              "",
              "pm.test('Response includes performance metrics', function () {",
              "    pm.expect(json).to.have.property('reportStartedAt');",
              "    pm.expect(json).to.have.property('reportGeneratedAt');",
              "    pm.expect(json).to.have.property('timeTaken');",
              "    pm.expect(json).to.have.property('mergedFileSizeInKbs');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}